%h1 Editing product
- form_for(@product) do |f|
  = f.error_messages
  %p
    = f.label :category_id
    %br
    = f.select :category_id, Category.all.collect { |c| [c.name, c.id] } 
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :price
    %br/
    = f.text_field :price
  %p
    = f.submit 'Update'
= link_to 'Show', @product
|
\#{link_to 'Back', products_path}
